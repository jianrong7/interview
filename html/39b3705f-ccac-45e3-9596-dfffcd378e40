<script type="text/javascript">
	function LightBoxIt( newimg, byline, caption )
	{
        $('#image-container').show();
        $('#video-container').hide();
        $('#byline').html(byline);
        $('#caption').html(caption);
        $('#lightbox').attr("src",newimg );
		jwplayer( 'video-container' ).stop();
        $('#video-container_wrapper').hide();
	}
	
	function PlayIt( vid, byline, caption )
	{
        $('#image-container').hide();
        $('#video-container').show();
        $('#byline').html( byline );
        $('#caption').html(caption);

        /* setel pideo na */
		jwplayer.key="Pj/Xltfiqkjq3JiNkmhwBVUSfelSwecqPmdX1w==";
		jwplayer("video-container").setup({
			file: vid,
			width: "100%",
			aspectratio: "16:9",
			responsive: "yes",
            type: "mp4",
            primary: "flash"
		});
		jwplayer( 'video-container' ).play( true );
	}

	/* move non article content boxes into body of article */
	document.getElementById("TargetCarousel").innerHTML = document.getElementById("SourceCarousel").innerHTML;
	document.getElementById("TargetSocial").innerHTML = document.getElementById("SourceSocial").innerHTML;
	document.getElementById("TargetRelated").innerHTML = document.getElementById("SourceRelated").innerHTML;
	document.getElementById("SourceCarousel").parentNode.removeChild(document.getElementById("SourceCarousel"));
	document.getElementById("SourceSocial").parentNode.removeChild(document.getElementById("SourceSocial"));
	document.getElementById("SourceRelated").parentNode.removeChild(document.getElementById("SourceRelated"));
	/*	
	-------------------------------------------------------------------------
	code di atas untuk menggantikan code berbasis jquery yang tidak jalan ini
	-------------------------------------------------------------------------
	$('#TargetCarousel').append( $('#SourceCarousel') );
	$('#TargetSocial').append( $('#SourceSocial') );
	$('#TargetRelated').append( $('#SourceRelated') );
	-------------------------------------------------------------------------
	*/
	
	/* script to take out some boxes for epaper enrichment */
	function getURL( name ){
	   if(name=(new RegExp('[?&]'+encodeURIComponent(name)+'=([^&]*)')).exec(location.search))
		  return decodeURIComponent(name[1]);
	}
	
	function removeParts() {
		$(".header-top,.footer-section,#outer-pane-right").remove();
		$("#outer-pane-left").removeClass("span8").addClass("span12").css( "padding-right", "20px" );	
		/*
		var remEle = document.getElementsByClassName("header-top")[0];
		remEle.parentNode.removeChild(remEle);
		var remEle = document.getElementsByClassName("footer-section")[0];
		remEle.parentNode.removeChild(remEle);
		var remEle = document.getElementById("outer-pane-right");
		remEle.parentNode.removeChild(remEle);
		document.getElementById("outer-pane-left").className = "span12";
		document.getElementById("outer-pane-left").style.paddingRight = "20px";
		*/
	}
	
	if ( getURL( "epaper" ) == "yes" ) {
		$(document).ready( removeParts() );
	}

    function scr2Ele() {
        $('html, body').animate({scrollTop:$("#komentar").offset().top}, 1000);
    }
    if ($('.CommentsBox:contains("Belum ada komentar")').length > 0 ) {
        $('#TargetSocial').prepend( '<a class="share share-comment" onclick="scr2Ele(); return false;">0 Komentar</a>' );
    } else {
        var cc = $('.CommentsBox').length;
        $('#TargetSocial').prepend( '<a class="share share-comment" onclick="scr2Ele(); return false;">'+cc+' Komentar</a>' );
    }

	/*
	-------------------------------------------------------------------------
	code di atas untuk menggantikan code berbasis jquery yang tidak jalan ini
	-------------------------------------------------------------------------
	if ( getURL( 'epaper' ) == 'yes' ) {
		$(".header-section,.footer-section,#right-panel").remove();
		$("#pane-left").removeClass("span8").addClass("span12").css( "padding-right", "20px" );	
	}
	-------------------------------------------------------------------------
	*/
</script>
