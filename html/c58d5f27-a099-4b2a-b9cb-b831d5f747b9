	function LightBoxIt( newimg, byline, caption )
	{
        $('#image-container').show();
        $('#video-container').hide();
        $('#byline').html(byline);
        $('#caption').html(caption);
        $('#lightbox').attr("src",newimg );
		jwplayer( 'video-container' ).stop();
        $('#video-container_wrapper').hide();
	}
	
	function PlayIt( vid, byline, caption )
	{
        $('#image-container').hide();
        $('#video-container').show();
        $('#byline').html( byline );
        $('#caption').html(caption);

        /* setel pideo na */
		jwplayer.key="Pj/Xltfiqkjq3JiNkmhwBVUSfelSwecqPmdX1w==";
		jwplayer("video-container").setup({
			file: vid,
			width: "100%",
			aspectratio: "16:9",
			responsive: "yes",
            type: "mp4",
            primary: "flash"
		});
		jwplayer( 'video-container' ).play( true );
	}

